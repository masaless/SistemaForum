<%- include('partials/header.ejs') %>

<body>
    <%- include('partials/navbar.ejs') %>
        <div class="container">
            <hr>
            <a href="/perguntar" class="btn btn-warning">Fazer uma Pergunta</a>
            <hr>
            <h1>Perguntas</h1>
            <hr>
            <% perguntas.forEach(pergunta => { %>
                <br>
                <div class="card">
                    <div class="card-body">
                        <h3>
                            <%= pergunta.titulo %>
                        </h3>
                    </div>
                    <div class="card-footer">
                        <a href="/pergunta/<%= pergunta.id %>"><button class="btn btn-warning">Responder</button></a> 
                    </div>
                </div>
            <% }) %>
        </div>

 </body>

<%- include('partials/footer.ejs') %>